<h1><%= @medication.name %></h1>

<h2>Medications</h2>

<table class="table">
  <thead>
  <tr>
    <th>Patient</th>
    <th>Dosage/Schedule</th>
    <th>Dates</th>
    <th>Prescribed By</th>
  </tr>
  </thead>
  <body>
  <% @prescriptions.each do |prescription| %>

    <tr>
      <td><%= prescription.patient.first_name %> <%= prescription.patient.last_name %></td>
      <td><%= prescription.dosage %> <%= prescription.schedule %></td>
      <td><%= prescription.start_date.strftime("%m/%d/%Y") %> - <%= prescription.end_date.strftime("%m/%d/%Y") %></td>
      <td><%= prescription.user.name %></td>
    </tr>

  <% end %>

  </body>
</table>